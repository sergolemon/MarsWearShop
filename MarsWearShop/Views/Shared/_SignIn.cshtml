<div id="sign-in-box" @if(Context.Request.Query.ContainsKey("ReturnUrl")) @("class=active")>
    <div class="background" onclick="closeForm()"></div>
    <form>
        <div class="top-box">
            <span class="header-font">вход</span>
            <button type="button" class="close" onclick="closeForm()"><img src="~/icon/close.png" /></button>
        </div>
        <div class="msg-box">
            <small></small>
        </div>
        <div class="form-group">
            <label class="header-font">логин</label>
            <input name="login" class="text-input" type="email" required />
        </div>
        <div class="form-group">
            <label class="header-font">пароль</label>
            <input name="password" class="text-input" type="password" required />
        </div>
        <div class="form-checkbox-group">
            <label>
                <input type="checkbox" />
                <span class="checkbox"></span>
                <span class="text header-font">запомнить меня</span>
            </label>
        </div>
        <div class="form-group">
            <button type="button" class="sign-in-btn header-font" onclick="signIn()">войти</button>
        </div>
        <div class="links-box">
            <a href="">зарегистрироваться</a>
            <a href="">забыли пароль?</a>
        </div>
    </form>
</div>